<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="/img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>{{blog.title}}</h2>
                    <ul>
                        <li>{{blog.User.firstName}} {{blog.User.lastName}}</li>
                        <li>{{showDate blog.createdAt}}</li>
                        <li>{{blog.Comments.length}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->

<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            {{>sidebar}}
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    {{{blog.description}}}
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img src="{{blog.User.imagePath}}" alt="">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>{{blog.User.firstName}} {{blog.User.lastName}}</h6>
                                    <span>{{#if blog.User.isAdmin}}Admin{{/if}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> {{blog.Category.name}}</li>
                                    <li><span>Tags:</span> {{#each blog.Tags}}{{name}},{{/each}}</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->